# AWS Academy Migration Configuration
# Copy this file to terraform.tfvars and fill in your values

# Your Telegram bot token (from @BotFather)
telegram_token = "YOUR_TELEGRAM_BOT_TOKEN"

# The LabRole ARN from AWS Academy
# Find this in AWS Academy -> AWS Details -> AWS CLI section
# Format: arn:aws:iam::ACCOUNT_ID:role/LabRole
lab_role_arn = "arn:aws:iam::YOUR_ACCOUNT_ID:role/LabRole"

# Environment: dev, staging, or prod
environment = "dev"

# CloudWatch log retention (valid values: 1, 3, 5, 7, 14, 30, 60, 90, 120, 150, 180, 365)
log_retention_days = 14

# Lambda configuration (optional - defaults are usually fine)
# lambda_memory_size = 256
# lambda_timeout = 30